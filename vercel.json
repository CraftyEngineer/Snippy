{
    "version": 2,
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/static-build"
      },
      {
        "src": "api/app.py",
        "use": "@vercel/python",
        "config": {
          "runtime": "python3.9",
          "installCommand": "mkdir -p python && pip install -r api/requirements.txt",
          "includeFiles": "api/** python/**"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "api/app.py"
      }
    ]
  }