{
    "version": 2,
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "dist",
          "installCommand": "npm install",
          "buildCommand": "npm run build"
        }
      },
      {
        "src": "api/app.py",
        "use": "@vercel/python",
        "config": {
            "runtime": "python3.9",
            "installCommand": "python -m pip install --upgrade pip && pip install -r api/requirements.txt --target ./api",
            "includeFiles": "api/**"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "api/app.py"
      },
      {
        "src": "/(.*)",
        "dest": "dist/$1"
      }
    ]
  }